{
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": false,
    "module": "esnext",
    "moduleResolution": "node",
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "jsx": "preserve",
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "outDir": "./dist",
    "types": [
      "node",
      "jest"
    ],
    "baseUrl": "src",
    "paths": {
      "test-utils/*": [
        "test-utils/*"
      ],
      "Components/*": [
        "components/*"
      ],
      "Views/*": [
        "views/*"
      ],
      "Types/*": [
        "types/*"
      ],
      "Utils/*": [
        "utils/*"
      ],
      "Providers/*": [
        ".providers/*"
      ]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "../node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/__tests__/*",
    "dist",
    "build"
  ]
}
